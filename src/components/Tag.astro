---
import type { TagType } from '../types';

type Props = TagType;

const { tag, count } = Astro.props;
---

<a class="tag" href={`/?tag=${tag}`}>
  #{tag}<sup class="count">{count}</sup>
</a>

<style>
  .tag {
    font-size: 1.2em;
    width: min-content;
    white-space: nowrap;
    text-align: center;
    margin: 0 1rem 0.5rem 1rem;
    color: var(--text-color);
  }

  .tag:hover {
    background-color: var(--accent-color);
  }

  .count {
    margin-left: 4px;
    font-size: 0.5em;
    text-decoration: none;
  }
</style>
